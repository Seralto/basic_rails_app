<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div class="alert alert-danger">
      <% @game.errors.full_messages.each do |message| %>
        <%= message %> <br>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :price, placeholder: 'Price', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, { prompt: true }, class: 'form-control' %>

  </div>
  <div class="actions">
    <%= button_tag 'Save', class: 'btn btn-success'%>
    <%= link_to 'Back', games_path, class: 'btn btn-info' %>
  </div>
<% end %>
